namespace ConsoleApplication19
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("x=");
            int x = int.Parse(Console.ReadLine());
            int n = 0;
            string temp = "";
            for (int i = 0; i < x.ToString().Length; i++)
            {
                if (i != 1) temp += x.ToString()[i];
            }
            temp += x.ToString()[1];
            n = Convert.ToInt32(temp);
            Console.WriteLine("n = {0}", n);
            Console.ReadLine();
        }
    }
}
